<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row">
    <h1 class="offset-auto">Edit Employee</h1>

    <form
      action="/employees/<%= employee._id %>?_method=PATCH"
      method="post"
      class="col-8 offset-0 form needs-validation"
      novalidate
    >
      <!-- Employee ID -->
      <div class="mb-3 mt-3 row">
        <label for="employee-id" class="col-sm-2 col-form-label"
          >Employee ID</label
        >
        <div class="col-sm-10">
          <input
            type="text"
            readonly
            class="form-control"
            placeholder="John Doe"
            required
            value="<%= employee._id %>"
          />
        </div>
      </div>

      <!-- Name -->
      <div class="mb-3 mt-3 row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="name"
            name="employee[name]"
            placeholder="John Doe"
            required
            value="<%= employee.name %>"
          />
        </div>
      </div>

      <!-- Email -->
      <div class="mb-3 row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input
            type="email"
            class="form-control"
            id="email"
            name="employee[email]"
            placeholder="john@example.com"
            value="<%= employee.email %>"
            required
          />
        </div>
      </div>

      <!-- Mobile Number -->
      <div class="mb-3 row">
        <label for="mobile-number" class="col-sm-2 col-form-label"
          >Mobile No</label
        >
        <div class="col-sm-10">
          <input
            type="number"
            class="form-control"
            id="mobile-number"
            name="employee[mobilenumber]"
            placeholder="9145xxxxxx"
            value="<%= employee.mobilenumber %>"
            required
          />
        </div>
      </div>

      <!-- Designation -->

      <div class="mb-3 row">
        <label for="designation" class="col-sm-2 col-form-label"
          >Designation</label
        >
        <div class="col-sm-10">
          <select
            class="form-select"
            id="designation"
            name="employee[designation]"
            required
          >
            <option selected>Choose...</option>

            <% if (employee.designation === 'HR') { %>
            <option value="HR" selected>HR</option>
            <% } else { %>
            <option value="HR">HR</option>
            <% } %> <% if (employee.designation === 'Manager') { %>
            <option value="Manager" selected>Manager</option>
            <% } else { %>
            <option value="Manager">Manager</option>
            <% } %> <% if (employee.designation === 'Sales') { %>
            <option value="Sales" selected>Sales</option>
            <% } else { %>
            <option value="Sales">Sales</option>
            <% } %>
          </select>
        </div>
      </div>

      <!-- Gender -->
      <div class="mb-3 row">
        <label for="gender-male" class="col-sm-2 col-form-label">Gender</label>
        <div class="col-sm-10">
          <div class="form-check">
            <% if (employee.gender === 'male') { %>
            <input
              class="form-check-input"
              type="radio"
              name="employee[gender]"
              id="gender-male"
              value="male"
              checked
              required
            />
            <% } else { %>
            <input
              class="form-check-input"
              type="radio"
              name="employee[gender]"
              id="gender-male"
              value="male"
              required
            />
            <% } %>
            <label class="form-check-label" for="gender-male"> Male </label>
          </div>
          <div class="form-check">
            <% if (employee.gender === 'female') { %>
            <input
              class="form-check-input"
              type="radio"
              name="employee[gender]"
              id="gender-female"
              value="female"
              checked
            />
            <% } else { %>
            <input
              class="form-check-input"
              type="radio"
              name="employee[gender]"
              id="gender-female"
              value="female"
            />
            <% } %>
            <label class="form-check-label" for="gender-female"> Female </label>
          </div>
        </div>
      </div>

      <!-- Course  -->
      <div class="mb-3 row">
        <label for="course-mca" class="col-sm-2 col-form-label">Course</label>
        <div class="col-sm-10">
          <div class="form-check">
            <% if (employee.course.includes('MCA')) { %>
            <input
              class="form-check-input"
              type="checkbox"
              value="MCA"
              id="course-mca"
              name="employee[course]"
              checked
            />
            <% } else { %>
            <input
              class="form-check-input"
              type="checkbox"
              value="MCA"
              id="course-mca"
              name="employee[course]"
            />
            <% } %>

            <label class="form-check-label" for="course-mca"> MCA </label>
          </div>

          <div class="form-check">
            <% if (employee.course.includes('BSC')) { %>
            <input
              class="form-check-input"
              type="checkbox"
              value="BSC"
              id="course-bsc"
              name="employee[course]"
              checked
            />
            <% } else { %>
            <input
              class="form-check-input"
              type="checkbox"
              value="BSC"
              id="course-bsc"
              name="employee[course]"
            />
            <% } %>

            <label class="form-check-label" for="course-bsc"> BSC </label>
          </div>

          <div class="form-check">
            <% if (employee.course.includes('BCA')) { %>
            <input
              class="form-check-input"
              type="checkbox"
              value="BCA"
              id="course-bca"
              name="employee[course]"
              checked
            />
            <% } else { %>
            <input
              class="form-check-input"
              type="checkbox"
              value="BCA"
              id="course-bca"
              name="employee[course]"
            />
            <% } %>

            <label class="form-check-label" for="course-bca"> BCA </label>
          </div>
        </div>
      </div>

      <!-- Image Upload  -->

      <div class="mb-3 row">
        <label for="image" class="col-sm-2 col-form-label">Picture Link</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="image"
            name="employee[image]"
            placeholder="image url"
            value="<%= employee.image %>"
            required
          />
        </div>
      </div> 
      <div class="col-auto mb-3">
        <a href="/employees" class="btn btn-dark ">Cancel</a>
        <button type="submit" class="btn btn-primary mx-3">Save Changes</button>
      </div>
    </form>
    <div class="col-md-2">
      <!-- Image URL --><br />
      <label for="" class="col-form-label">Employee Picture</label>
      <br />
      <!-- <h4>Employee Image</h4> -->
      <img
        src="<%= employee.image %>"
        alt="Invalid image url"
        width="100%"
        id="employee-image"
      />
      <br />
    </div>
  </div>
</body>
